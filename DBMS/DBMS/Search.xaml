<Window x:Class="DBMS.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBMS"
        mc:Ignorable="d"
        Title="Search" Height="450" Width="800">
    <Grid>
        <Label Content="Please write your condition here" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Condition" HorizontalAlignment="Left" Margin="261,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="451" RenderTransformOrigin="0.733,-0.833"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="733,34,0,0" VerticalAlignment="Top" Width="47" Click="Button_Click"/>
        <DataGrid x:Name="GridResult" Margin="0,90,0,0"  CanUserAddRows="False"/>

    </Grid>
</Window>
